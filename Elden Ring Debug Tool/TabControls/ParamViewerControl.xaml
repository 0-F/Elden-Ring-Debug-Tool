<local:DebugControl x:Class="Elden_Ring_Debug_Tool.ParamViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Elden_Ring_Debug_Tool"
             mc:Ignorable="d" 
             Height="500" Width="800" Background="DarkGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  >
            <ComboBox x:Name="ComboBoxParams" HorizontalAlignment="Center" Width="300" Margin="0,35,0,0" IsEnabled="False"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" >
            <ListBox Height="400" IsEnabled="False" />

        </StackPanel>
        <ScrollViewer CanContentScroll="False" Grid.Column="1" Grid.Row="1">
            <StackPanel x:Name="ParamPanel" CanVerticallyScroll="True" IsEnabled="False"/>
        </ScrollViewer>
    </Grid>
</local:DebugControl>
