<Application x:Class="Elden_Ring_Debug_Tool_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Elden_Ring_Debug_Tool_WPF"
             xmlns:conv="clr-namespace:Elden_Ring_Debug_Tool_WPF.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\ControlDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <conv:NumberToHexString x:Key="NumberToHexString"/>
            <conv:HalfNumberConverter x:Key="HalfNumberConverter"/>
            <conv:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
