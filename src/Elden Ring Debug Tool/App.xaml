<Application x:Class="Elden_Ring_Debug_Tool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Elden_Ring_Debug_Tool"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\ControlDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
            <local:NumberToHexString x:Key="numberToHexString"/>
            <local:HalfNumberConverter x:Key="halfNumberConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
